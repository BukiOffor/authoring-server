{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CMS Author",
  "version": "0.1.0",
  "identifier": "com.cms-author.dev",
  "build": {
   "frontendDist": "../out",
    "beforeDevCommand": "npm i && node utils/index.js",
    "beforeBuildCommand": "npm i && node utils/index.js"
  },
  "app": {
    "windows": [
      {
        "title": "Main",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": ["bin/tool_exec"]  
  }
}
